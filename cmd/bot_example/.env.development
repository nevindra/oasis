# ─── Telegram ───────────────────────────────────────────────
# Get from @BotFather
export OASIS_TELEGRAM_TOKEN=

# ─── LLM ────────────────────────────────────────────────────
# Main chat model (default: anthropic/claude-sonnet-4-5)
export OASIS_LLM_API_KEY=

# Intent classifier (default: gemini/gemini-2.5-flash-lite, falls back to LLM key)
export OASIS_INTENT_API_KEY=

# Action/tool-use model (falls back to LLM key)
export OASIS_ACTION_API_KEY=

# ─── Embedding ──────────────────────────────────────────────
# Default: openai/text-embedding-3-small
export OASIS_EMBEDDING_API_KEY=

# ─── Database ───────────────────────────────────────────────
# Remote libSQL (leave empty to use local SQLite file "oasis.db")
export OASIS_TURSO_URL=
export OASIS_TURSO_TOKEN=

# ─── Integrations: Linear ──────────────────────────────────
# Personal API key from https://linear.app/settings/api
export OASIS_LINEAR_API_KEY=

# ─── Integrations: Google (Calendar + Gmail) ───────────────
# OAuth 2.0 credentials from Google Cloud Console
# https://console.cloud.google.com/apis/credentials
export OASIS_GOOGLE_CLIENT_ID=
export OASIS_GOOGLE_CLIENT_SECRET=
